<!DOCTYPE html>
<html>
<head>
<title>SurveyCat</title>
<%= stylesheet_link_tag    'application', media: 'all' %>
<%= javascript_include_tag 'application' %>
<%= csrf_meta_tags %>
</head>
<body>
<%= render 'refills/navigation' %>
<% flash.each do |name, msg| -%>
  <div class="flash">
    <p><%= content_tag :div, msg, class: name %></p>
</div>
<% end %>
<div class="outer-container">
  <%= yield %>
</div>
<%= render "refills/footer_2" %>
</body>
</html>
