<header class="navigation">
  <div class="menu-wrapper">
    <p class="navigation-menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <ul id="navigation-menu">
    <a href="/" class="logo">
      <img src="/cat.png" alt="">
    </a>
        <li class="nav-link logo-text"><%= link_to "SURVEY CAT", root_path %></a></li>
        <% if signed_in? %>
        <li class="nav-link"><%= link_to "Create a survey", new_survey_path %></li>
        <li class="nav-link more"><a href="javascript:void(0)">More</a>
          <ul class="submenu">
            <li><a href="javascript:void(0)">Settings</a></li>
            <li><a href="javascript:void(0)">Contact</a></li>
          <% end %>
          </ul>
        </li>

      </ul>
    </div>
    <div class="navigation-tools">
    <% if signed_in? %>
      <%= link_to "Sign out", session_path, method: :delete, class: "sign-up" %>
    <% else %>
      <%= link_to "Sign in", new_session_path, class: "sign-up" %>
    <%= link_to "Sign up", new_user_path, class: "sign-up" %>
    <% end %>
    </div>
  </div>
</header>

<script>
  $(function() {
    var menu = $('#navigation-menu');
    var menuToggle = $('#js-mobile-menu');
    var signUp = $('.sign-up');

    $(menuToggle).on('click', function(e) {
      e.preventDefault();
      menu.slideToggle(function(){
        if(menu.is(':hidden')) {
          menu.removeAttr('style');
        }
      });
    });

    // underline under the active nav item
    $(".nav .nav-link").click(function() {
      $(".nav .nav-link").each(function() {
        $(this).removeClass("active-nav-item");
      });
      $(this).addClass("active-nav-item");
      $(".nav .more").removeClass("active-nav-item");
    });
  });
</script>
